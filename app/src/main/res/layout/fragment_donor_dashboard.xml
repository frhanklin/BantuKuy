<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"

    tools:context=".ui.donor.fragments.DonorDashboardFragment">

    <TextView
        android:id="@+id/donor_dash_tv_greetings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/secondary_text_one"
        android:fontFamily="@font/oxygen_bold"
        tools:text="Hai, Username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/donor_dash_tv_greetings_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_two"
        android:fontFamily="@font/oxygen_bold"
        android:text="@string/donor_greetings"
        app:layout_constraintStart_toStartOf="@id/donor_dash_tv_greetings_title"
        app:layout_constraintTop_toBottomOf="@id/donor_dash_tv_greetings_title"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/donor_dash_fg_widget1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:name="com.frhanklindevs.bantukuy.ui.donor.widgets.BantuCariWidget"
        app:layout_constraintTop_toBottomOf="@id/donor_dash_tv_greetings_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/donor_dash_fg_widget2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:name="com.frhanklindevs.bantukuy.ui.donor.widgets.BantuDonasiWidget"
        app:layout_constraintTop_toBottomOf="@id/donor_dash_fg_widget1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/donor_dash_fg_widget3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:name="com.frhanklindevs.bantukuy.ui.donor.widgets.DonationBoxWidget"
        app:layout_constraintTop_toBottomOf="@id/donor_dash_fg_widget2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>