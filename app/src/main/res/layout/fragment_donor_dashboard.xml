<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"

    tools:context=".donor.ui.fragments.dashboard.DonorDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donor_dash_tv_greetings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Oxygen_Bold_Black_24"
            tools:text="Hai, Username"/>

        <TextView
            android:id="@+id/donor_dash_tv_greetings_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Oxygen_Bold_Black_14"
            android:textColor="@color/secondary_text_two"
            android:text="@string/donor_greetings"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/donor_dash_fg_widget1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:name="com.frhanklindevs.bantukuy.donor.ui.fragments.dashboard.widgets.BantuCariWidget"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/donor_dash_fg_widget2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:name="com.frhanklindevs.bantukuy.donor.ui.fragments.dashboard.widgets.BantuDonasiWidget"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/donor_dash_fg_widget3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:name="com.frhanklindevs.bantukuy.donor.ui.fragments.dashboard.widgets.DonationBoxWidget"/>



    </LinearLayout>




</ScrollView>