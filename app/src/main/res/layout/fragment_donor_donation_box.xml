<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".donor.ui.fragments.DonorDonationBoxFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donor_box_tv_greetings_title"
            style="@style/Oxygen_Bold_Black_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bantudonasi"
            tools:text="BantuDonasi"/>

        <!--Home Container-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/donor_box_container_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/donor_box_home_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Oxygen_Bold_Black_18"
                android:text="@string/tujuan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_contents"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_title">

                <ImageView
                    android:id="@+id/donor_box_home_img"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:src="@drawable/rounded_background_secondary_3"
                    android:contentDescription="@string/panti_tujuan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/donor_box_home_tv_content_title"
                    style="@style/Oxygen_Bold_Black_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/donor_box_home_img"
                    app:layout_constraintStart_toEndOf="@id/donor_box_home_img" />

                <TextView
                    android:id="@+id/donor_box_home_tv_content_address"
                    style="@style/Oxygen_Bold_Black_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/donor_box_home_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_title"
                    app:layout_constraintBottom_toBottomOf="@id/donor_box_home_img"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/donor_box_home_tv_warning"
                style="@style/Oxygen_Bold_Black_12"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/home_not_selected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_title"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Donation Box Container-->
        <LinearLayout
            android:id="@+id/donor_box_container_donations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/donor_box_donations_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Oxygen_Bold_Black_18"
                android:text="@string/kotak_sumbanganku"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!--Cash Donation Container-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/donor_box_donation_container_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/donor_box_donations_tv_title_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Oxygen_Bold_Black_18"
                    android:text="@string/uang"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/donor_box_donations_img_cash"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/rounded_background_secondary_3"
                    android:contentDescription="@string/uang"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donations_tv_title_cash"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/donor_box_home_tv_content_title_cash"
                    style="@style/Oxygen_Bold_Black_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/cash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_cash"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_cash" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/ubah"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_black_family"
                    android:background="@drawable/rounded_background_primary_border"
                    app:layout_constraintBottom_toTopOf="@id/donor_box_donations_tv_content_cash_value"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_cash"/>

                <TextView
                    android:id="@+id/donor_box_donations_tv_content_cash_value"
                    style="@style/Oxygen_Bold_Black_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_cash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/donor_box_donations_img_cash"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Goods Donation Container-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/donor_box_donation_container_goods_universal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/donor_box_donations_tv_title_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Oxygen_Bold_Black_18"
                    android:text="@string/barang"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/donor_box_donation_container_goods_grocery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donations_tv_title_goods">

                    <ImageView
                        android:id="@+id/donor_box_donations_img_goods_grocery"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/rounded_background_secondary_3"
                        android:contentDescription="@string/uang"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_title_goods_grocery"
                        style="@style/Oxygen_Bold_Black_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        tools:text="@string/lorem"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/cash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_goods_grocery"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_grocery" />

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_qty_goods_grocery"
                        style="@style/Oxygen_Bold_Black_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:maxLength="12"
                        tools:text="@string/lorem"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_grocery"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_title_goods_grocery"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/ubah"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_black_family"
                        android:background="@drawable/rounded_background_primary_border"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_qty_goods_grocery"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_grocery"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/donor_box_donation_container_goods_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donation_container_goods_grocery">

                    <ImageView
                        android:id="@+id/donor_box_donations_img_goods_clothes"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/rounded_background_secondary_3"
                        android:contentDescription="@string/uang"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_title_goods_clothes"
                        style="@style/Oxygen_Bold_Black_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        tools:text="@string/lorem"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/cash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_goods_clothes"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_clothes" />

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_qty_goods_clothes"
                        style="@style/Oxygen_Bold_Black_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:maxLength="12"
                        tools:text="@string/lorem"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_clothes"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_title_goods_clothes"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/ubah"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_black_family"
                        android:background="@drawable/rounded_background_primary_border"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_qty_goods_clothes"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_clothes"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/donor_box_donation_container_goods_office_stationery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donation_container_goods_clothes">

                    <ImageView
                        android:id="@+id/donor_box_donations_img_goods_office_stationery"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/rounded_background_secondary_3"
                        android:contentDescription="@string/uang"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_title_goods_office_stationery"
                        style="@style/Oxygen_Bold_Black_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        tools:text="@string/lorem"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/cash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_goods_office_stationery"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_office_stationery" />

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_qty_goods_office_stationery"
                        style="@style/Oxygen_Bold_Black_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:maxLength="12"
                        tools:text="@string/lorem"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_office_stationery"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_title_goods_office_stationery"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/ubah"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_black_family"
                        android:background="@drawable/rounded_background_primary_border"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_qty_goods_office_stationery"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_office_stationery"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/donor_box_donation_container_goods_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donation_container_goods_office_stationery">

                    <ImageView
                        android:id="@+id/donor_box_donations_img_goods_others"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/rounded_background_secondary_3"
                        android:contentDescription="@string/uang"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_title_goods_others"
                        style="@style/Oxygen_Bold_Black_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        tools:text="@string/lorem"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/cash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_goods_others"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_others" />

                    <TextView
                        android:id="@+id/donor_box_home_tv_content_qty_goods_others"
                        style="@style/Oxygen_Bold_Black_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:maxLength="12"
                        tools:text="@string/lorem"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_others"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_title_goods_others"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/ubah"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_black_family"
                        android:background="@drawable/rounded_background_primary_border"
                        app:layout_constraintTop_toBottomOf="@id/donor_box_home_tv_content_qty_goods_others"
                        app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_goods_others"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Expedition Donation Container-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/donor_box_donation_container_expedition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/donor_box_donations_tv_title_expedition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Oxygen_Bold_Black_18"
                    android:text="@string/expedition"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/donor_box_donations_img_expedition"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/rounded_background_secondary_3"
                    android:contentDescription="@string/uang"
                    app:layout_constraintTop_toBottomOf="@id/donor_box_donations_tv_title_expedition"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/donor_box_home_tv_content_title_expedition"
                    style="@style/Oxygen_Bold_Black_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/penyedia_layanan_pengiriman"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/donor_box_donations_img_expedition"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_expedition" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/ubah"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_black_family"
                    android:background="@drawable/rounded_background_primary_border"
                    app:layout_constraintBottom_toTopOf="@id/donor_box_donations_tv_content_expedition_value"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_expedition"/>

                <TextView
                    android:id="@+id/donor_box_donations_tv_content_expedition_value"
                    style="@style/Oxygen_Bold_Black_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    tools:text="@string/lorem"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/donor_box_donations_img_expedition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/donor_box_donations_img_expedition"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <!--Donation Box Overview-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coontainer_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white_border">

            <TextView
                android:id="@+id/overview_title"
                style="@style/Oxygen_Bold_Black_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donor_overview"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/overview_cash_title"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/uang"
                app:layout_constraintStart_toStartOf="@id/overview_title"
                app:layout_constraintTop_toBottomOf="@id/overview_title"/>

            <TextView
                android:id="@+id/overview_cash_value"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/rupiah"
                app:layout_constraintTop_toTopOf="@id/overview_cash_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/overview_goods_title"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/barang"
                app:layout_constraintStart_toStartOf="@id/overview_title"
                app:layout_constraintTop_toBottomOf="@id/overview_cash_title"/>

            <TextView
                android:id="@+id/overview_goods_value"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilogram"
                app:layout_constraintTop_toTopOf="@id/overview_goods_title"
                app:layout_constraintEnd_toEndOf="@id/overview_cash_value"/>


            <TextView
                android:id="@+id/overview_expedition_title"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/expedition"
                app:layout_constraintStart_toStartOf="@id/overview_title"
                app:layout_constraintTop_toBottomOf="@id/overview_goods_title"/>


            <TextView
                android:id="@+id/overview_expedition_value"
                style="@style/Oxygen_Bold_Black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupiah"
                app:layout_constraintTop_toTopOf="@id/overview_expedition_title"
                app:layout_constraintEnd_toEndOf="@id/overview_cash_value"/>

            <TextView
                android:id="@+id/overview_total_title"
