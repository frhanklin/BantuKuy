<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/background_popup_primary">

    <ImageView
        android:id="@+id/popup_del_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_gradient_del"
        android:src="@drawable/ic_baseline_delete_24"/>

    <TextView
        android:id="@+id/popup_del_text"
        style="@style/Oxygen_Bold_White_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_del_img"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:text="@string/delete_confirmation"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/popup_del_detail_text"
        style="@style/Oxygen_Bold_White_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_del_text"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:textAlignment="center" />


    <ImageButton
        android:id="@+id/btn_del_confirm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_gradient_add"
        android:src="@drawable/ic_baseline_check_24"/>

    <ImageButton
        android:id="@+id/btn_del_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_gradient_del"
        android:src="@drawable/ic_close_white"/>





</RelativeLayout>