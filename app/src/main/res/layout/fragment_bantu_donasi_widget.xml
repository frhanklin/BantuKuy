<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".donor.ui.fragments.dashboard.widgets.BantuDonasiWidget">

    <TextView
        android:id="@+id/bantu_donasi_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/secondary_text_one"
        android:fontFamily="@font/oxygen_bold_family"
        android:text="@string/title_bantu_donasi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bantu_donasi_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_one"
        android:fontFamily="@font/oxygen_bold_family"
        android:text="@string/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bantu_donasi_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_secondary_2"
        app:layout_constraintTop_toBottomOf="@id/bantu_donasi_tv_title"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/bantu_donasi_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bantu_donasi_add_btn">

            <TextView
                android:id="@+id/bantu_donasi_overview_placeholder_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Saat ini ada"
                android:textSize="13sp"
                android:fontFamily="@font/oxygen_bold_family"/>

            <TextView
                android:id="@+id/bantu_donasi_overview_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="64sp"
                android:fontFamily="@font/oxygen_bold_family"
                android:text="27"
                tools:text="27"/>

            <TextView
                android:id="@+id/bantu_donasi_overview_placeholder_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_gravity="center"
                android:text="barang di kotak"
                android:textSize="13sp"
                android:fontFamily="@font/oxygen_bold_family"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bantu_donasi_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:text="Tambah"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            android:fontFamily="@font/oxygen_bold_family"
            android:textColor="@color/secondary_text_three"
            android:background="@drawable/rounded_background_secondary_3"
            app:layout_constraintTop_toTopOf="@id/bantu_donasi_overview"
            app:layout_constraintBottom_toBottomOf="@id/bantu_donasi_overview"
            app:layout_constraintStart_toEndOf="@id/bantu_donasi_overview"
            app:layout_constraintEnd_toEndOf="@id/bantu_donasi_detail_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bantu_donasi_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Lihat\nUbah"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:fontFamily="@font/oxygen_bold_family"
            android:textColor="@color/secondary_text_three"
            android:background="@drawable/rounded_background_secondary_3"
            app:layout_constraintTop_toTopOf="@id/bantu_donasi_overview"
            app:layout_constraintBottom_toBottomOf="@id/bantu_donasi_overview"
            app:layout_constraintStart_toEndOf="@id/bantu_donasi_add_btn"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>